<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/infolist2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/icon_infolist_selector"
        android:layout_marginStart="122dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/maplist2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/icon_maplist_selector"
        android:layout_alignTop="@+id/infolist2"
        android:layout_toEndOf="@+id/infolist2"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/divide_line"
        android:layout_marginTop="60dp"
        android:id="@+id/view2" />

    <nova.croprotector.ButtonBar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>